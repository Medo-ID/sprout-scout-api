{
  "compilerOptions": {
    /* Modern setup */
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "bundler",

    /* Root + Output */
    "rootDir": ".",
    "outDir": "./dist",

    /* Path aliases */
    "paths": {
      "@/*": ["./src/*"]
    },

    /* Node + Jest types */
    "types": ["node", "jest"],

    /* Interop + JSON */
    "esModuleInterop": true,
    "resolveJsonModule": true,

    /* Strictness */
    "strict": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules", "dist"]
}
